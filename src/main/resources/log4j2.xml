<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <JsonLayout complete="false" compact="true" eventEol="true" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="fi.hsl.common" level="info" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>

</Configuration>
